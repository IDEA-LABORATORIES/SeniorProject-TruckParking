<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_maps">


    <activity
        android:id="@+id/activity_login"
        android:name="com.example.TruckParkingApp.ui.login.LoginActivity"
        android:label="Login"
        tools:layout="@layout/activity_login" />

    <fragment
        android:id="@+id/navigation_route"
        android:name="com.example.TruckParkingApp.ui.route.RouteFragment"
        android:label="@string/title_route"
        tools:layout="@layout/fragment_route" />


    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.example.TruckParkingApp.MapsFragment"
        android:label="@string/title_activity_maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_saved"
        android:name="com.example.TruckParkingApp.ui.saved.SavedFragment"
        android:label="@string/title_saved"
        tools:layout="@layout/fragment_saved" />

    <fragment
        android:id="@+id/navigation_contribute"
        android:name="com.example.TruckParkingApp.ui.contribute.ContributeFragment"
        android:label="@string/title_contribute"
        tools:layout="@layout/fragment_contribute" />

</navigation>